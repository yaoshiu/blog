---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  repo: string;
  desc?: string;
  icon?: ImageMetadata;
}

const { repo, desc, icon } = Astro.props;

const [, name] = repo.split('/');
---

<div w-full px-2>
  <a
    href=`https://github.com/${repo}`
    flex
    items-center
    justify-between
    rounded-lg
    p-4
    transition-shadow
    duration-300
    shadow="~ dark:subtle hover:lg"
    text="white dark:[#EAEAEA]"
    bg="primary dark:dark-primary"
  >
    <h2 font-bold flex gap-2 items-center>
      {icon && <Image src={icon} alt={repo} width="24" height="24" />}
      {name}:
    </h2>
    <p text-sm>{desc}</p>
  </a>
</div>
