---
import { getCollection } from 'astro:content';
import DayJS from '@components/solid/DayJS';
import Base from '@layouts/Base.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;

const { Content, remarkPluginFrontmatter } = await entry.render();

console.log(remarkPluginFrontmatter);
---

<Base
  title={entry.data.title}
  description={entry.data.description}
  image="/og.png"
>
  <div class="prose">
    <h1 class="mb-2">{entry.data.title}</h1>
    <p class="not-prose" text="sm text-1 dark:dark-text-1">
      {remarkPluginFrontmatter.readingTime} Â·
      <DayJS date={entry.data.publish} format="MMM D, YYYY" client:visible />
      Last modified
      <DayJS
        date={remarkPluginFrontmatter.lastModified}
        format="HH:mm z, MMM D, YYYY"
        client:visible
      />
    </p>
    <Content />
  </div>
</Base>
