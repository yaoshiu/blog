---
import Footer from '@components/Footer.astro';
import Head from '@components/Head.astro';
import Header from '@components/Header.astro';
import ScrollTop from '@components/solid/ScrollTop';
import 'katex/dist/katex.min.css';
import 'rehype-callouts/theme/vitepress';

interface Props {
  title: string;
  description: string;
  image: string;
  type?: string;
  data?: Record<string, unknown>;
}

const { title, description, image, type, data } = Astro.props;
---

<html lang="en">
  <Head {title} {description} {image} {type} {data} />
  <body bg="background-0" class="font-sans" text="text-0">
    <Header />
    <main class="p-4 w-full max-w-prose mx-auto" transition:animate="fade">
      <div class="flex-1">
        <slot />
      </div>
      <Footer />
    </main>
    <div class="fixed bottom-4 right-4">
      <ScrollTop client:load />
    </div>
  </body>
</html>
