---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ThemeProvider } from '../components/Theme';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <Head {title} />
  <body h-screen font-sans>
    <ThemeProvider client:load>
      <div
        bg="background-0 dark:dark-background-0"
        text="text-0 dark:dark-text-0"
      >
        <Header />
        <div w-full flex="~ col" items-center p-4 pb-8>
          <div max-w-lg w-full>
            <article class="prose" prose-zinc dark:prose-invert py-4 text-base>
              <slot />
            </article>
            <Footer />
          </div>
        </div>
      </div>
    </ThemeProvider>
  </body>
</html>
