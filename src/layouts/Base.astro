---
import Footer from '@components/Footer.astro';
import Head from '@components/Head.astro';
import Header from '@components/Header.astro';
import ScrollTop from '@components/solid/ScrollTop';

interface Props {
  title: string;
  description: string;
  image: string;
  type?: string;
}

const { title, description, image, type } = Astro.props;
---

<html lang="en">
  <Head {title} {description} {image} {type} />
  <body
    flex="~ col items-center"
    class="font-sans"
    bg="background-0 dark:dark-background-0"
    text="text-0 dark:dark-text-0"
  >
    <Header />
    <div p-4>
      <article class="prose [&_*]:animate-fade-in">
        <slot />
      </article>
      <Footer />
    </div>
    <div class="fixed bottom-4 right-4">
      <ScrollTop client:only="solid-js" />
    </div>
  </body>
</html>
