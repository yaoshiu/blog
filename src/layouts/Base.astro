---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import { ThemeProvider } from "../components/Theme";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <Head {title} />
  <body h-screen font-sans>
    <ThemeProvider client:load>
      <Header />
      <slot />
    </ThemeProvider>
  </body>
</html>
